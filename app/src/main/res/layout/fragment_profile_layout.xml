<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.whatsbestapp.nexusbond.whatsbestapp.ProfileLayout">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40"
        tools:layout_editor_absoluteY="284dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/header"
        android:scaleType="centerCrop"
        android:id="@+id/appCompatImageView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toTopOf="@+id/guideline" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/appCompatImageView3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/header"
        app:civ_border_width="0dp"
        app:civ_border_color="#FF000000"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.077"
        app:layout_constraintBottom_toTopOf="@+id/guideline" />

    <TextView
        android:id="@+id/profile_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="Drys2016"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView3"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/appCompatImageView3"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/appCompatImageView3"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/profile_view_posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posts"
        android:layout_marginLeft="46dp"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_view_name" />

    <TextView
        android:id="@+id/profile_view_postscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="12K"
        app:layout_constraintTop_toBottomOf="@+id/profile_view_posts"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/profile_view_posts"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/profile_view_posts"
        app:layout_constraintHorizontal_bias="0.4"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/profile_view_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Followers"
        app:layout_constraintRight_toLeftOf="@+id/profile_view_following"
        app:layout_constraintLeft_toRightOf="@+id/profile_view_posts"
        app:layout_constraintBottom_toBottomOf="@+id/profile_view_posts"
        android:layout_marginBottom="0dp"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <TextView
        android:id="@+id/profile_view_followerscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="1K"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/profile_view_followers"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/profile_view_followers"
        app:layout_constraintTop_toBottomOf="@+id/profile_view_followers"
        app:layout_constraintHorizontal_bias="0.571"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/profile_view_following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Following"
        app:layout_constraintRight_toLeftOf="@+id/profile_view_groups"
        app:layout_constraintLeft_toRightOf="@+id/profile_view_followers"
        app:layout_constraintBottom_toBottomOf="@+id/profile_view_followers"
        android:layout_marginBottom="-18dp" />

    <TextView
        android:id="@+id/profile_view_followingcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="10"
        app:layout_constraintTop_toBottomOf="@+id/profile_view_following"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/profile_view_following"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/profile_view_following"
        app:layout_constraintHorizontal_bias="0.444"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/profile_view_groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Groups"
        app:layout_constraintLeft_toRightOf="@+id/profile_view_following"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/profile_view_following"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="-17dp" />

    <TextView
        android:id="@+id/profile_view_groupscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="300"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/profile_view_groups"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/profile_view_groups"
        app:layout_constraintTop_toBottomOf="@+id/profile_view_groups"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


</android.support.constraint.ConstraintLayout>
